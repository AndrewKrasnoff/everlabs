<% if controller_path == 'admin/posts' %>
  <%= search_form_for [:admin, @q], html: {class: "d-flex"} do |form| %>
    <%= form.search_field :title_or_body_body_cont, class: "form-control me-2" %>
    <%= form.submit action: 'Search', class: "btn btn-outline-light" %>
  <% end %>  
<% else %>

<%= search_form_for @q, html: {class: "d-flex"} do |form| %>
  <%= form.search_field :title_or_body_body_cont, class: "form-control me-2" %>
  <%= form.submit action: 'Search', class: "btn btn-outline-light" %>
<% end %>  
<% end %>