<div class="card">
  <div class="card-body">
    <h5 class="card-title">Add Comment</h5>
    <%= form_for [@post, @post.comments.build] do |form| %>
      <div class="mb-3" >
        <%= form.text_field :body, class: "form-control form-control-sm" %>
      </div>
      <div>
        <%= form.submit action: 'Create', class: "btn btn-primary btn-sm" %>
      </div>
    <% end %>
  </div>   
</div>  